# Django Production Environment Variables

# Security
SECRET_KEY="{{ lookup('password', '/dev/null length=50 chars=ascii_letters,digits') }}"
DEBUG=False
ALLOWED_HOSTS={{ domain_name }},{{ server_ip }},localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=https://{{ domain_name }}

# Database - Individual settings (required by settings.py)
DB_NAME={{ db_name }}
DB_USER={{ db_user }}
DB_PASSWORD={{ db_password }}
DB_HOST=localhost
DB_PORT=5432

# Database URL (alternative format)
DATABASE_URL=postgresql://{{ db_user }}:{{ db_password }}@localhost:5432/{{ db_name }}

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY="{{ lookup('password', '/dev/null length=50 chars=ascii_letters,digits') }}"
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=7

# Email Configuration (update with actual SMTP settings)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Static and Media
STATIC_URL=/static/
STATIC_ROOT={{ backend_dir }}/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT={{ backend_dir }}/media

# Pagination
DEFAULT_PAGE_SIZE=20

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
